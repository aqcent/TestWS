@using TestWS.Models.Tickets
@model TestWS.Models.Tickets.Hall

@section SubNav
{
    @Html.Partial("~/Views/Shared/SubNavigation.cshtml", SubNavigationMenu.Halls)
}

<h2>Edit Hall</h2>

@using (Html.BeginForm("EditHall", "TicketsAdmin"))
{
    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        @Html.LabelFor(x => x.Name)
        @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.EditorFor(x => x.Count, new { htmlAttributes = new { @class = "form-control", style = "display: none" } })
        @Html.EditorFor(x => x.Layout, new { htmlAttributes = new { @class = "form-control", style = "display: none" } })
    </div>
    <input class="btn btn-success" type="submit" value="Save changes" />
    <label class="btn btn-default editor" for="editor-input">Edit layout</label>
}
<input type="checkbox" id="editor-input">
<div class="layout-container">
    <div class="layout-settings">
        <p>SETTINGS</p>
        <input id="input-rows" placeholder="Rows" type="number">
        <input id="input-columns" placeholder="Columns" type="number">
        <button class="layout-btn">GENERATE</button>
    </div>
    <div class="layout-map">
    </div>
</div>

@section scripts
{
    <script src="/Scripts/hall-layout.js"></script>
}

